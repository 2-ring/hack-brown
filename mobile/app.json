{
  "expo": {
    "name": "DropCal",
    "slug": "dropcal",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "scheme": "dropcal",
    "splash": {
      "image": "./assets/splash-icon-minimal.png",
      "resizeMode": "contain",
      "backgroundColor": "#1170C5"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.dropcal.app",
      "infoPlist": {
        "NSCameraUsageDescription": "DropCal needs access to your camera to scan event flyers and documents.",
        "NSPhotoLibraryUsageDescription": "DropCal needs access to your photo library to extract event information from images.",
        "NSMicrophoneUsageDescription": "DropCal needs access to your microphone to record audio notes about events.",
        "NSCalendarsUsageDescription": "DropCal needs access to your calendar to create and manage events.",
        "NSCalendarsWriteOnlyAccessUsageDescription": "DropCal needs permission to add events to your calendar.",
        "NSRemindersUsageDescription": "DropCal can optionally create reminders for your events."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#1170C5"
      },
      "notification": {
        "icon": "./assets/notification-icon.png",
        "color": "#1170C5"
      },
      "package": "com.dropcal.app",
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.RECORD_AUDIO",
        "android.permission.READ_CALENDAR",
        "android.permission.WRITE_CALENDAR",
        "android.permission.MODIFY_AUDIO_SETTINGS",
        "android.permission.INTERNET"
      ],
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    },
    "plugins": [
      "expo-image-picker",
      "expo-document-picker",
      "expo-av",
      "expo-file-system",
      [
        "expo-build-properties",
        {
          "android": {
            "compileSdkVersion": 34,
            "targetSdkVersion": 34,
            "buildToolsVersion": "34.0.0"
          },
          "ios": {
            "deploymentTarget": "15.1"
          }
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "a4617bd4-96e3-4094-8eaf-33f1a21e1072"
      },
      "supabaseUrl": "https://bdpiluwfhfmitvrcdrlr.supabase.co",
      "supabaseAnonKey": "sb_publishable_2q3pA3-ZS2hI4uKKQGV2RQ_u8Lu-z4D"
    },
    "owner": "dropcal"
  }
}
