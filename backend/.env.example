# Anthropic API Key
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# OpenAI API Key (for audio transcription)
OPENAI_API_KEY=your_openai_api_key_here

# Vapi API Keys (for voice AI)
VAPI_PRIVATE_KEY=your_vapi_private_key_here
VAPI_PUBLIC_KEY=your_vapi_public_key_here

# Supabase Configuration
# Get these from Supabase Dashboard > Settings > API
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_KEY=your_service_role_key_here
SUPABASE_DB_PASSWORD=your_database_password_here

# Google Calendar OAuth Credentials
# Get these from Google Cloud Console > APIs & Services > Credentials
# Download the OAuth client JSON and extract the values
GOOGLE_CLIENT_ID=your_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_client_secret_here

# OAuth Redirect URI (for production deployment)
# Must match the authorized redirect URI in Google Cloud Console
# For local development: http://localhost:5000/api/oauth/callback
# For production: https://api.yourdomain.com/api/oauth/callback
OAUTH_REDIRECT_URI=http://localhost:5000/api/oauth/callback

# Token Encryption Key
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=your_encryption_key_here

# Firecrawl API Key
# Get this from https://firecrawl.dev
FIRECRAWL_API_KEY=fc-bf15347ce52c4e92831a4e73a4d47906

# PostHog Analytics & LLM Observability
# Get these from https://us.posthog.com > Project Settings
POSTHOG_API_KEY=phc_your_project_api_key_here
POSTHOG_HOST=https://us.i.posthog.com

# Duckling Temporal Parsing Service
# Run with: docker-compose up duckling (from project root)
DUCKLING_URL=http://localhost:8000

# Flask Configuration
FLASK_ENV=development
