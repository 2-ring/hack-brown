commands:
  01_install_docker:
    command: |
      if ! command -v docker &> /dev/null; then
        dnf install -y docker
        systemctl enable docker
        systemctl start docker
      fi
    ignoreErrors: false

  02_start_duckling:
    command: |
      # Stop any existing Duckling container
      docker rm -f duckling 2>/dev/null || true
      # Run Duckling on localhost:8000
      docker run -d \
        --name duckling \
        --restart always \
        -p 8000:8000 \
        rasa/duckling
    ignoreErrors: false
