{
  "name": "dropcal-extension",
  "version": "2.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "npm run build:chrome",
    "build:chrome": "node build.mjs --browser=chrome",
    "build:firefox": "node build.mjs --browser=firefox",
    "build:safari": "node build.mjs --browser=safari",
    "build:all": "npm run build:chrome && npm run build:firefox && npm run build:safari",
    "watch": "node build.mjs --watch --browser=chrome",
    "watch:firefox": "node build.mjs --watch --browser=firefox",
    "clean": "rm -rf dist-chrome dist-firefox dist-safari"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.287",
    "esbuild": "^0.24.2",
    "typescript": "~5.7.0"
  },
  "dependencies": {
    "@phosphor-icons/web": "^2.1.2"
  }
}
